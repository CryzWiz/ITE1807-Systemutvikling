{% extends "generalTemplate.twig" %}

{% block head %}
    <!-- Specific libraries css and js -->
    <link rel="stylesheet" href="{{ assets_dir }}/css/sysutv2017.css">
    <link rel="stylesheet" href="{{ assets_dir }}/css/general_styles.css">
    <script>
        function removeRequired(form){
            $('[name=password]').removeAttr('required');
            /*$.each(form, function(key, value) {
                if ( value.hasAttribute("required")){
                    value.removeAttribute("required");
                }
            });*/
        }
    </script>
{% endblock %}

{% block content %}
    <div class="wrap container-fluid">

        <div class="row main-content">
            <div class="col-md-4 col-md-offset-4 main">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form class="form-horizontal" action="{{ action_dir }}login_action.php" method="post">
                            {% if messageType == 'warning' or messageType == 'error' %}
                                <div class="alert alert-danger" role="alert">
                                    {{ message }}
                                </div>
                            {% endif %}
                            <div class="form-group">
                                <label for="inputEmail" class="col-sm-3 control-label">
                                    Epost eller brukernavn</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="username" name="username" placeholder="user@domain.com"
                                            {% if messageType == 'error' %}
                                                value="{{ username }}"
                                            {% endif %}
                                           required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword" class="col-sm-3 control-label">
                                    Passord</label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control" id="password" name="password" placeholder="*********" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox"/>
                                            Husk meg
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group last">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <button type="submit" class="btn btn-success btn-sm" name="submit">
                                        Logg inn</button>
                                    <button type="reset" class="btn btn-danger btn-sm">
                                        Reset</button>
                                </div>
                            </div>
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" name="newpass" onClick="removeRequired(this.form)" class="btn btn-default btn-sm">
                                    Glemt passordet?</button>
                            </div>
                        </form>


                    </div>
                </div>
                <!-- Delete from here -->
                <div class="col-md-4 col-md-offset-4" style="width: 300px;">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <span class="login-link" ><b>List of made pages:</b></span>
                            <span class="login-link" >Not Registred? <a href="{{ action_dir }}register.php" target="_blank">Register here</a></span>
                           <!-- <span class="login-link" >See the Dash? <a href="{{ action_dir }}dashboard.php" target="_blank">Visit here</a></span>
                            <span class="login-link" >See the 404 page? <a href="{{ action_dir }}error.php" target="_blank">Visit here</a></span>
                            -->
                        </div>
                    </div>
                </div>
                <!-- To here, Just a samplelist during production -->

            </div>
        </div><!-- end of main-content -->

    </div>
{% endblock %}